{
  "name": "@sigloop/wallet-server",
  "version": "0.0.1",
  "description": "AWS KMS key management for Ethereum signers",
  "author": "in-th3-l00p",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./advanced": {
      "import": "./dist/advanced.js",
      "types": "./dist/advanced.d.ts"
    },
    "./constants": {
      "import": "./dist/constants.js",
      "types": "./dist/constants.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "example:basic": "tsx examples/basic-kms-key.ts",
    "example:composable": "tsx examples/composable-kms.ts"
  },
  "dependencies": {
    "@aws-sdk/client-kms": "^3.700.0",
    "viem": "^2.28.0"
  },
  "devDependencies": {
    "@types/node": "^22.15.0",
    "dotenv": "^16.4.7",
    "tsx": "^4.21.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  },
  "keywords": [
    "aws-kms",
    "ethereum",
    "signer",
    "secp256k1",
    "viem"
  ]
}

---
import { fade } from "astro:transitions";
import { Button } from "@/components/ui/button";
---

<section
	id="hero"
	class="w-full h-screen flex flex-col items-center justify-center"
	transition:animate={fade({ duration: "0.6s" })}
>
	<img src="/logo.png" alt="sigloop logo" class="invert w-32" />
	<h1 class="text-6xl font-semibold mt-6">sigloop</h1>
	<h2 class="text-lg mt-3 text-zinc-500">wallets for agents that pay</h2>

	<div class="grid grid-cols-2 mt-6 gap-3">
		<a href="/whitepaper.pdf"><Button>whitepaper</Button></a>
		<a href="#about"><Button variant="outline">learn more</Button></a>
	</div>
</section>
